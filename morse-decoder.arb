MORSE_CODE = {
    a:'.-',
    b:'-...',
    c: '-.-.',
    d:'-..',
    e:'.',
    f:'..-.',
    g:'--.',
    h:'....',
    i:'..',
    j:'.---',
    k:'-.-',
    l:'.-..',
    m:'--',
    n:'-.',
    o:'---',
    p:'.--.',
    q:'--.-',
    r:'.-.',
    s:'...',
    t:'-',
    u:'..-',
    v:'...-',
    w:'.--',
    x:'-..-',
    y:'-.--',
    z:'--..',
    1=>'.----',
    2=>'..---',
    3=>'...--',
    4=>'....-',
    5=>'.....',
    6=>'-....',
    7=>'--...',
    8=>'---..',
    9=>'----.',
    0=>'-----',
}

def decode_char(morse_char)
    MORSE_CODE.each { |key, value| 
        if morse_char == value
            return "#{key}"
        end
    }
end

def decode_word(morse_word)
    arr_of_characters = morse_word.split(" ")
    result = []
    arr_of_characters.each { |character| 
         result.push(decode_char(character))
    }
    result = result.join("").upcase+" "
    return result
end